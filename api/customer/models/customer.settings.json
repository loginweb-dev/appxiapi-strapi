{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "document": {
      "type": "string"
    },
    "phone": {
      "type": "biginteger"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "user_id": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "customer"
    },
    "locality_id": {
      "model": "locality",
      "via": "customer"
    }
  }
}
