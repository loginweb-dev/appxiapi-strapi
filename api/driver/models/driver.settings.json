{
  "kind": "collectionType",
  "collectionName": "drivers",
  "info": {
    "name": "Driver",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "CI": {
      "type": "string"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "user_id": {
      "via": "driver",
      "plugin": "users-permissions",
      "model": "user"
    },
    "vehicles": {
      "collection": "vehicle",
      "via": "driver_id"
    }
  }
}
